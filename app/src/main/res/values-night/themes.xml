<resources>

    <style name="Base.Theme.ColorBlendr" parent="Theme.Material3.DayNight">
        <!-- Window layout. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:enforceNavigationBarContrast">false</item>

        <!-- App theme -->
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="snackbarStyle">@style/SnackBarStyle</item>
        <item name="snackbarTextViewStyle">@style/SnackBarStyle.TextView</item>
        <item name="snackbarButtonStyle">@style/SnackBarStyle.Button</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenuDefault</item>
    </style>

    <style name="Base.Theme" parent="Base.Theme.ColorBlendr" />
</resources>